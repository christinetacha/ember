{{#if addNewCity}}
  <div class="new-city">
    <form class="form-group">
      <div>
        <label>Name</label>
        {{input value=name id="name"}}
      </div>
      <div>
        <label>Country</label>
        {{input value=country id="country"}}
      </div>
      <button {{action "saveCity"}}>Save City</button>
    </form>
  </div>
{{else}}
  <button {{action "showCityForm"}}>Add New City</button>
{{/if}}
